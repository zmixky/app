<!DOCTYPE html>
<html lang="en">

{{> head}}

<body>
    {{> navbar}}

    <div class="collection">
        {{#if isEmpty}}

        <p>List is empty</p>

        {{else}}

        <div class="collection">
            {{#each articles}}
            <a href="/articles/article/{{this.id}}" class="collection-item"><span
                    class="badge">{{this.views}}</span>{{this.title}}</a>
            {{/each}}
        </div>

        {{/if}}
    </div>
</body>

</html>